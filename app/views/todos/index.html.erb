<!-- Modern Header Section -->
<div class="mb-8">
  <div class="bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200 rounded-2xl shadow-lg p-8">
    <h1 class="text-5xl font-bold mb-2 text-purple-700">Todo List</h1>
    <p class="text-purple-500 text-lg">Stay organized and get things done</p>
  </div>
</div>

<!-- Action Bar -->
<div class="mb-6 flex items-center justify-between">
  <%= link_to new_todo_path, class: "bg-gradient-to-r from-blue-300 to-purple-300 text-purple-800 px-6 py-3 rounded-xl inline-flex items-center shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-300 font-semibold" do %>
    <i class="fas fa-plus mr-2"></i> New Todo
  <% end %>
  
  <% if @todos.any? %>
    <div class="text-purple-600">
      <span class="font-semibold"><%= @todos.count %></span> 
      <%= @todos.count == 1 ? 'task' : 'tasks' %>
    </div>
  <% end %>
</div>

<!-- Todo Cards Grid -->
<% if @todos.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @todos.each do |todo| %>
      <div class="bg-white rounded-2xl shadow-md hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1 border border-purple-100 overflow-hidden">
        <!-- Card Header with Status Indicator -->
        <div class="<%= todo.is_completed ? 'bg-gradient-to-r from-green-200 to-emerald-200' : 'bg-gradient-to-r from-orange-200 to-pink-200' %> h-2"></div>
        
        <!-- Card Content -->
        <div class="p-6">
          <!-- Task Title -->
          <h3 class="text-xl font-bold text-purple-800 mb-4 <%= 'line-through text-purple-300' if todo.is_completed %>">
            <%= todo.title %>
          </h3>
          
          <!-- Status Badge -->
          <div class="mb-6">
            <% if todo.is_completed %>
              <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-green-100 text-green-700">
                <i class="fas fa-check-circle mr-2"></i> Completed
              </span>
            <% else %>
              <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-orange-100 text-orange-600">
                <i class="fas fa-clock mr-2"></i> Pending
              </span>
            <% end %>
          </div>
          
          <!-- Action Buttons -->
          <div class="flex items-center gap-3 pt-4 border-t border-purple-100">
            <%= link_to edit_todo_path(todo), class: "flex-1 bg-blue-100 text-blue-700 px-4 py-2.5 rounded-lg hover:bg-blue-200 transition-colors duration-200 text-center font-medium" do %>
              <i class="fas fa-edit mr-2"></i> Edit
            <% end %>
            <%= link_to todo_path(todo), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }, class: "flex-1 bg-pink-100 text-pink-700 px-4 py-2.5 rounded-lg hover:bg-pink-200 transition-colors duration-200 text-center font-medium" do %>
              <i class="fas fa-trash mr-2"></i> Delete
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <!-- Empty State -->
  <div class="bg-white rounded-2xl shadow-md p-12 text-center border border-purple-100">
    <div class="max-w-md mx-auto">
      <div class="mb-6">
        <i class="fas fa-clipboard-list text-6xl text-purple-200"></i>
      </div>
      <h3 class="text-2xl font-bold text-purple-700 mb-3">No tasks yet</h3>
      <p class="text-purple-500 mb-6">Get started by creating your first todo task!</p>
      <%= link_to new_todo_path, class: "bg-gradient-to-r from-blue-300 to-purple-300 text-purple-800 px-6 py-3 rounded-xl inline-flex items-center shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-300 font-semibold" do %>
        <i class="fas fa-plus mr-2"></i> Create Your First Todo
      <% end %>
    </div>
  </div>
<% end %>
